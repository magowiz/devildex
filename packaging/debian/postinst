#!/bin/bash

set -e

case "$1" in
    configure)
        echo "Installing Python dependencies via pip..."
        python3 -m pip install \
            pip-requirements-parser \
            pdoc3 \
            pydoctor \
            fastmcp \
            markdownify
        echo "Python dependencies installed."
    ;; 

    abort-upgrade|abort-remove|abort-deconfigure)
    ;; 

esac

# dh_installdeb will replace this with shell code
# automatically generated by other debhelper scripts.

exit 0
